---
import Layout from './Layout.astro';
import Sidebar from '../components/docs/Sidebar.astro';
import DocContent from '../components/docs/DocContent.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <div class="docs-container">
    <Sidebar />
    <main class="content">
      <DocContent />
    </main>
  </div>
</Layout>

<style>
  .docs-container {
    display: grid;
    grid-template-columns: 300px 1fr;
    min-height: calc(100vh - 64px);
  }

  .content {
    width: 100%;
    height: 100%;
    overflow-y: auto;
  }

  @media (max-width: 768px) {
    .docs-container {
      grid-template-columns: 1fr;
    }
  }
</style>