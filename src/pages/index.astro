---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/home/Hero.astro';
import QuickLinks from '../components/home/QuickLinks.astro';
---

<Layout title="Inicio">
  <Hero />
  
  <section class="quick-access">
    <h2>Accesos Rápidos</h2>
    <QuickLinks />
  </section>

  <section class="featured-docs">
    <h2>Documentación Popular</h2>
    <div class="cards">
      <a href="/docs/app1/getting-started" class="card">
        <h3>App 1 - Primeros Pasos</h3>
        <p>Aprende a configurar y usar App 1 desde cero</p>
      </a>
      <a href="/docs/app2/installation" class="card">
        <h3>App 2 - Instalación</h3>
        <p>Guía paso a paso para instalar App 2</p>
      </a>
    </div>
  </section>
</Layout>

<style>
  .quick-access,
  .featured-docs {
    margin: 4rem 0;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: var(--color-heading);
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .card {
    padding: 2rem;
    border-radius: 8px;
    background: var(--color-card-bg);
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s;
  }

  .card:hover {
    transform: translateY(-4px);
  }

  .card h3 {
    margin: 0 0 1rem 0;
    color: var(--color-primary);
  }

  .card p {
    margin: 0;
    color: var(--color-text-muted);
  }
</style>